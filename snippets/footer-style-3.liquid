<footer class="page-footer footer-style-3  {{ section.settings.outer_margin }}">
    <div class="footer-top container">
        <div class="text-center py-1 py-md-3">
            {% include 'footer-logo' %}
        </div>
        {% if section.settings.shop_info_yes %}
        <div class="row lined shop-features-style3">
             {% include 'footer_shop_info' %}
        </div>
        {% endif %}
        <div class="row lined py-0 py-md-5">
            <div class="col-md-6 col-lg-3">
                <div class="footer-block collapsed-mobile">
                    {% if section.settings.navigation_1 != blank %}
                        <div class="title">
                            <h4>{{ linklists[section.settings.navigation_1].title }}</h4>
                            <div class="toggle-arrow"></div>
                        </div>
                        <div class="collapsed-content">
                            <ul>
                                {% for link in linklists[section.settings.navigation_1].links %}
                                    <li>
                                        {{ link.title | append:label | link_to: link.url }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% else %}
                        <p>Choose Navigation in Theme Settings / Footer / NAVIGATION 1</p>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="footer-block collapsed-mobile">
                    {% if section.settings.navigation_2 != blank %}
                        <div class="title">
                            <h4>{{ linklists[section.settings.navigation_2].title }}</h4>
                            <div class="toggle-arrow"></div>
                        </div>
                        <div class="collapsed-content">
                            <ul>
                                {% for link in linklists[section.settings.navigation_2].links %}
                                    <li>
                                        {{ link.title | append:label | link_to: link.url }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% else %}
                        <p>Choose Navigation in Theme Settings / Footer / NAVIGATION 2</p>
                    {% endif %}
                </div>
            </div>
            <div class="col-md-6 col-lg-3">
                {% if section.settings.support_time != blank or section.settings.support_time_title != blank %}
                    <div class="footer-block collapsed-mobile">
                        <div class="title">
                            <h4>{{ section.settings.support_time_title }}</h4>
                            <div class="toggle-arrow"></div>
                        </div>
                        <div class="collapsed-content">
                            {{ section.settings.support_time }}
                        </div>
                    </div>
                {% endif %}
                {% if section.settings.chat_yes %}
                    <h4 class="title">{{  section.settings.chat_link }}</h4>
                {% endif %}
            </div>
            <div class="col-md-6 col-lg-3">
                <div class="footer-block collapsed-mobile">
                    <div class="title">
                        <h4>{{ 'general.theme.newsletter' | t }}</h4>
                        <div class="toggle-arrow"></div>
                    </div>
                    <div class="collapsed-content">
                        {% if section.settings.newsletter %}
                            <div class="subscribe-form">
                                <div class="subscribe-form-text"><p>{{ settings.newsletter_desc_footer_3 }}</p></div>
                                {% include 'newsletter-footer-form' %}
                            </div>
                        {% endif %}
                        {% include 'social-media-links' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container footer-bottom">
        <div class="row lined py-4 justify-content-center">
            <div class="col-md-6 text-center">
                <div class="footer-copyright">
                    {{ section.settings.copyright }}
                </div>
                <div class="mt-2">
                    {% include 'footer_payments' %}
                </div>
            </div>
        </div>
    </div>
</footer>