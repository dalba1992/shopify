<header class="hdr hdr-style-3 {{ header_width }}  {% if section.settings.sticky %}hdr_sticky{% endif %} minicart-icon-style-4 hdr-mobile-style{{ section.settings.style_mobile }}">
    {% include 'topline' %}
    {% include 'mobile-navigation' %}
    {% include 'header-mobile' %}
    <div class="hdr-desktop hide-mobile">
        <div class="hdr-topline">
            <div class="container">
                <div class="row">
                    <div class="col-auto hdr-topline-left">
                        {% include 'header-languages' %}
                        {% include 'currency-picker' %}
                    </div>
                    <div class="col hdr-topline-center">
                        <div class="custom-text">{{ section.settings.delivery }}</div>
                        <div class="custom-text">{{ section.settings.phone_1 }}</div>
                    </div>
                    <div class="col-auto hdr-topline-right links-holder">
                        {% include 'wishlist-header' %}
                        {% include 'header-login-form' %}
                    </div>
                </div>
            </div>
        </div>
        <div class="hdr-content hide-mobile">
            <div class="container">
                <div class="row">
                    <div class="col logo-holder">
                        <div class="menu-toggle hide-mobile"><a href="#" class="mobilemenu-toggle"><i class="icon icon-menu"></i></a></div>
                        {% include 'header-logo' %}
                    </div>
                    <div class="col search-holder nav-holder">
                        {% include 'header-search-visible' %}
                    </div>
                    <div class="col-auto minicart-holder">
                        {% include 'header-cart' %}
                    </div>
                </div></div>
        </div>
    </div>
    {% include 'header-sticky' %}
</header>