<!-- Product Gallery -->
<div class="prd-block_title-wrap prd-block_title-wrap-mobile mb-3">
  <h1 class="prd-block_title" style="font-size:8.2vw;text-align:center;">{{ product.metafields.c_f.title  }}</h1>
</div>

<div class="container">
<div class="row align-items-center">

<div class="col-9 px-0 pl-md-3 order-md-2 testing">
{% for image in product.images %}
<img src="{{ image.src | img_url: 'master' }}">
{% endfor %}
</div>

<div class="col-3 pr-0 order-md-1 testing2">
{% for image in product.images %}
<img src="{{ image.src | img_url: 'medium' }}">
{% endfor %}
</div>

</div>
</div>

<script type="text/javascript">
$(document).ready(function(){
  $('.testing').slick({
slidesToShow: 1,
slidesToScroll: 1,
arrows: false,
fade: true,
asNavFor: '.testing2'
  });
  $('.testing2').slick({
slidesToShow: 3,
slidesToScroll: 1,
asNavFor: '.testing',
vertical: true,
autoplay: true,
autoplaySpeed: 3000,
focusOnSelect: true
  });
});
</script>
<!-- /Product Gallery -->