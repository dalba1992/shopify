  function validateEmail(email) {
    var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
    return re.test(email);
  }

function validate() {
  var $result = $("#result");
  var email = $("#email-address").val();
  $result.text("");
  if (validateEmail(email)) {
    //$result.text(email + " is valid :)");
    //$result.css("color", "green");
    $("#email-address").removeClass('form-control--error');
    window.sessionStorage.setItem('customer_email', email);
    document.getElementById('labelStep3').click();
  } else {
    if(email == '')
    {
      	$result.text("Please enter your email address.");
    }else{
    	$result.text("Please enter a valid email address.");
    }
    
    $result.css("color", "red");
    $("#email-address").addClass('form-control--error');
  }
  return false;
}
