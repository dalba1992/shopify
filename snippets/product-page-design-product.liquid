        if (localStorage.getItem('time')) {
            dt = new Date(localStorage.getItem('time'));
        } else {
            var dt = new Date();
            var countDownTime = new Date().getMinutes() + 1;
            dt.setMinutes(countDownTime);
            localStorage.setItem('time', dt);
        }




        // Update the count down every 1 second
        var x = setInterval(function () {

            // Get todays date and time
            var now = new Date().getTime();

            // Find the distance between now and the count down date
            var distance = dt - now;

            var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            var seconds = Math.floor((distance % (1000 * 60)) / 1000);

            if (minutes < 10) { minutes = "0" + minutes }
            if (seconds < 10) { seconds = "0" + seconds }
            // Output the result in an element with id="demo"
            document.getElementsByClassName('minutes')[0].innerHTML = minutes
            document.getElementsByClassName('seconds')[0].innerHTML = seconds
            document.getElementsByClassName('minutes')[1].innerHTML = minutes
            document.getElementsByClassName('seconds')[1].innerHTML = seconds

            // If the count down is over, write some text 
            if (distance < 0) {
                clearInterval(x);
                localStorage.removeItem('time');
                document.getElementsByClassName('demo')[0].innerHTML = "Expired - Reload to reserve a new spot";
                document.getElementsByClassName('demo')[1].innerHTML = "Expired - Reload to reserve a new spot";
            }
        }, 1000);
