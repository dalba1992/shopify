<footer class="page-footer footer-style-6  {{ section.settings.outer_margin }}">
    <div class="footer-top container">
        <div class="row lined pt-md-2 pb-md-5 pt-lg-7">
            <div class="col-md-12 col-lg py-2 py-lg-0 text-center text-lg-left">
                <div class="footer-block">
                    <div class="footer-logo">{% include 'footer-logo' %}</div>
                    {% include 'social-media-links' %}
                </div>
            </div>
            <div class="col-md col-lg">
                <div class="footer-block collapsed-mobile">
                    {% if section.settings.navigation_1 != blank %}
                        <div class="title">
                            <h4>{{ linklists[section.settings.navigation_1].title }}</h4>
                            <div class="toggle-arrow"></div>
                        </div>
                        <div class="collapsed-content">
                            <ul>
                                {% for link in linklists[section.settings.navigation_1].links %}
                                    <li>
                                        {{ link.title | append:label | link_to: link.url }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% else %}
                        <p>Choose Navigation in Theme Settings / Footer / NAVIGATION 1</p>
                    {% endif %}
                </div>
            </div>
            <div class="col-md col-lg">
                {% if section.settings.support_time != blank or section.settings.support_time_title != blank %}
                    <div class="footer-block collapsed-mobile">
                        <div class="title">
                            <h4>{{ section.settings.support_time_title }}</h4>
                            <div class="toggle-arrow"></div>
                        </div>
                        <div class="collapsed-content">
                            {{ section.settings.support_time }}
                        </div>
                    </div>
                {% endif %}
                {% if section.settings.chat_yes %}
                    <h4 class="title">{{  section.settings.chat_link }}</h4>
                {% endif %}
            </div>
            <div class="col-md col-lg pb-3 pb-md-0 text-center-sm">
                <div class="footer-block">
                    {% if section.settings.newsletter %}
                        <div class="title">
                            <h4>{{ 'general.theme.newsletter' | t }}</h4>
                        </div>
                        <div class="subscribe-wrap">
                          <div class="subscribe-form">
                              {% include 'newsletter-footer-form' %}
                          </div>
                        </div>
                    {% endif %}
                    {% include 'footer_payments' %}
                </div>
            </div>
        </div>
    </div>
    <div class="container footer-bottom">
        <div class="row lined py-2 py-md-3 justify-content-center">
            <div class="col-md-6">
                <div class="footer-copyright text-center">
                    {{ section.settings.copyright }}
                </div>
            </div>
        </div>
    </div>
</footer>