{% unless settings.slides_mode %}
<div class="holder fullwidth {{ section.settings.outer_margin }} full-nopad bgcolor bgcolor-1">
    <div class="container">
        <div class="row no-gutters align-items-center">
            <div class="col-md">
                <a {% if section.settings.link %}href="{{ section.settings.link }}" target="{{ section.settings.link_target }}"{% endif %} class="bnr bnr--style-2 bnr--center bnr--middle"  data-fontratio="9.52">
					<span class="bnr-caption">
						<span class="bnr-text-wrap">
							<span class="bnr-text1">{{ section.settings.caption_1_text }}</span>
							<span class="bnr-text2">{{ section.settings.caption_2_text }}</span>
							<span class="bnr-text3">{{ section.settings.caption_3_text }}</span>
                            {% if section.settings.link_button_yes %}<span class="btn-decor bnr-btn btn-decor--whiteline">{{ section.settings.link_button_text }}<span class="btn-line"></span></span>{% endif %}
						</span>
					</span>
                </a>
            </div>
            <div class="col-md d-none d-md-block">
                <a {% if section.settings.link %}href="{{ section.settings.link }}" target="{{ section.settings.link_target }}"{% endif %} class="bnr bnr-hover-scale bnr--left bnr--middle"><img src="{% if section.settings.image != blank %}{{ section.settings.image | img_url: 'master' }}{% else %}{{ 'banner-6.png' | asset_url }}{% endif %}" alt=""></a>
            </div>
        </div>
    </div>
</div>
{% endunless %}
{% schema %}
{
"name": "Banner + text",
"class": "index-section",
"settings": [
{
"type": "header",
"content": "Layout"
},
{
"type": "select",
"id": "outer_margin",
"label": "Outer top margin",
"options":[
{"value":"mt-0","label":"None"},
{"value":"mt-1","label":"10px"},
{"value":"mt-2","label":"20px"},
{"value":"mt-3","label":"30px"},
{"value":"mt-4","label":"40px"},
{"value":"mt-5","label":"50px"},
{"value":"mt-6","label":"60px"},
{"value":"mt-65","label":"65px"},
{"value":"mt-7","label":"70px"},
{"value":"mt-8","label":"80px"},
{"value":"mt-9","label":"90px"},
{"value":"mt-10","label":"100px"}
],
"default": "mt-65"
},
{
"type": "header",
"content": "General"
},
{
"type": "image_picker",
"id": "image",
"label": "Image",
"info":"recommended width 800x466 (like in demo)"
},
{
"type": "url",
"id": "link",
"label": "Link"
},
{
"type": "select",
"id": "link_target",
"label": "Link Target",
"default":"_self",
"options": [
{ "value": "_blank", "label": "New page" },
{ "value": "_self",  "label": "In current page" }
]
},
{
"type": "header",
"content": "CAPTIONS"
},
{
"type":"header",
"content":"Caption 1"
},
{
"type": "text",
"id": "caption_1_text",
"label": "Caption 1",
"default":"ciber sale"
},
{
"type": "text",
"id": "caption_2_text",
"label": "Caption 2",
"default":"on summer collections"
},
{
"type": "text",
"id": "caption_3_text",
"label": "Caption 3",
"default":"50% or more off"
},
{
"type": "checkbox",
"id": "link_button_yes",
"label": "Add link button",
"default":true
},
{
"type": "text",
"id": "link_button_text",
"label": "Link button text",
"default":"shop now"
}
],
"presets": [
{
"name": "Banner + text",
"category": "Banners"
}
]
}
{% endschema %}