{% unless settings.slides_mode %}
<div class="holder global_width {{ section.settings.outer_margin }}">
    <div class="container">
        <h2 class="h1-style text-center">shop brands</h2>
        <div class="brand-prd-carousel vert-dots" data-slick='{"fade": true}'>
            {% for block in section.blocks %}
                {% if block.settings.enable %}
                    <div class="brand-prd">
                    <div class="brand-prd-image">
                        <div class="carousel-inside slide" data-ride="carousel">
                            <div class="carousel-inner" role="listbox">
                                <div class="item active"><img src="{% if block.settings.brand_slide_1 %}{{ block.settings.brand_slide_1 | img_url:'master' }}{% else %}{{ 'brand-img-1.jpg'  | asset_url }}{% endif %}" alt=""></div>
                                {% if block.settings.brand_slide_2 %}<div class="item"><img src="{{ block.settings.brand_slide_2 | img_url:'master' }}" alt=""></div>{% endif %}
                                {% if block.settings.brand_slide_3 %}<div class="item"><img src="{{ block.settings.brand_slide_3 | img_url:'master' }}" alt=""></div>{% endif %}
                            </div>
                            {% if block.settings.brand_slide_2 or block.settings.brand_slide_3 %} <span class="carousel-control next"></span> <span class="carousel-control prev"></span>{% endif %}
                        </div>
                    </div>
                        <div class="brand-prd-info">
                            <div class="inside">
                                <div class="text-center"><img src="{% if block.settings.image %}{{ block.settings.image | img_url:'master' }}{% endif %}{% if block.settings.image == blank %}{{ 'brand-fara.png'  | asset_url }}{% endif %}" alt=""></div>
                                <p>{{ block.settings.description }}</p>
                                <div class="text-center">{{ block.settings.description_links }}</div>
                            </div>
                        </div>
                </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
{% endunless %}
