    "type": "image_picker",
    "id": "brand_slide_2",
    "label": "Brand Slide Image 2",
    "info":"recommended size 570x339 px"
    },{
    "type": "image_picker",
    "id": "brand_slide_3",
    "label": "Brand Slide Image 3",
    "info":"recommended size 570x339 px"
    }

]
