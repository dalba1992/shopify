{% unless settings.slides_mode %}
<div class="holder fullboxed py-3 py-lg-6 {{ section.settings.outer_margin }} holder-bg-06">
    <div class="container">
        <div class="row vert-margin align-items-center   row-chess">
            <div class="col-md-6 col-lg-7">
                <img src="{% if section.settings.image %}{{ section.settings.image | img_url:'master' }}{% else %}{{ 'img-fashion2-01.png'  | asset_url }}{% endif %}" alt="" class="img-responsive">
            </div>
            <div class="col-md-6 col-lg-5">
                <div class="pr-lg-6">
                    <div class="title-wrap text-center text-md-right">
                        <h2 class="h-xl">{{ section.settings.caption_1 }}</h2>
                        <h3 class="h1-style">{{ section.settings.caption_2 }}</h3>
                    </div>
                    <p>{{ section.settings.description }}</p>
                    {% if section.settings.link != blank %}<div class="text-center mt-3"><a href="{{ section.settings.link }}" class="btn-decor">{{ section.settings.link_title }}</a></div>{% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endunless %}
{% schema %}
{
"name": "Banner + text Style 2",
"class": "index-section",
"settings": [
{
"type": "header",
"content": "Layout"
},
{
"type": "select",
"id": "outer_margin",
"label": "Outer top margin",
"options":[
{"value":"mt-0","label":"None"},
{"value":"mt-1","label":"10px"},
{"value":"mt-2","label":"20px"},
{"value":"mt-3","label":"30px"},
{"value":"mt-4","label":"40px"},
{"value":"mt-5","label":"50px"},
{"value":"mt-6","label":"60px"},
{"value":"mt-65","label":"65px"},
{"value":"mt-7","label":"70px"},
{"value":"mt-8","label":"80px"},
{"value":"mt-9","label":"90px"},
{"value":"mt-10","label":"100px"}
],
"default": "mt-65"
},
{
"type": "header",
"content": "General"
},
{
"type": "image_picker",
"id": "image",
"label": "Image",
"info":"recommended width 614x490 (like in demo)"
},
{
"type": "text",
"id": "link_title",
"label": "Link title",
"default":"Shop Now"
},
{
"type": "url",
"id": "link",
"label": "Link"
},
{
"type": "header",
"content": "CAPTIONS"
},
{
"type": "text",
"id": "caption_1",
"label": "Caption 1",
"default":"NEW SHOES"
},
{
"type": "text",
"id": "caption_2",
"label": "Caption 2",
"default":"IS ALWAYS <span class='custom-color'>GOOD IDEA</span>"
},
{
"type": "textarea",
