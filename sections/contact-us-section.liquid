<div class="holder mt-0">
    <div class="container">
        <div class="page-title">
                <h1>{{ page.title }}</h1>
        </div>
        <div class="row vert-margin-double justify-content-center">
            <div class="col-sm-6">
                {% form 'contact', class:"contact-form" %}
                    {% if form.posted_successfully? %}
                        <p class="note form-success">
                            <b>{{ 'contact.form.post_success' | t }}</b>
                        </p>
                    {% endif %}
                    {{ form.errors | default_errors }}
                    {% assign name_attr = 'contact.form.name' | t | handle %}
                    {% assign name_attr = 'contact.form.phone' | t | handle %}
                    <div class="form-group">
                        <label>{{ 'contact.form.name' | t }} *</label>
                        <input class="form-control" type="text" id="ContactFormName" name="contact[name]"   value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}" required/>
                    </div>
                    <div class="form-group">
                        <label>{{ 'contact.form.email' | t }} *</label>
                        <input class="form-control" type="email" id="ContactFormEmail" name="contact[email]"   value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" required/>
                    </div>
              		<div class="form-group">
                        <label>Subject *</label>
                        <input class="form-control" type="text" id="ContactFormSubject" name="contact[subject]" required/>
                    </div>
                    <div class="form-group">
                        <label>{{ 'contact.form.message' | t }} *</label>
                        <textarea class="form-control" id="ContactFormMessage" name="contact[body]" value="{% if form.body %}{{ form.body }}{% endif %}" rows="4" required></textarea>
                    </div>
                    <button class="btn btn-primary mt-15" type="submit">{{ 'contact.form.submit' | t }}</button>
                {% endform %}
            </div>
        </div>
    </div>
</div>
<div class="holder fullwidth">
    <div class="container px-0">
        <div class="contact-map">
            {{ section.settings.iframe | replace:'frameborder="0"','' }}
        </div>
    </div>
</div>
