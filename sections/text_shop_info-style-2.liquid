{% unless settings.slides_mode %}
<div class="holder  boxed  {{ section.settings.outer_margin }} {% if section.settings.show_under_header %}show_under_header{% endif %}">
  <div class="container holder-bg-12">
    <div class="row shop-features-style3">
      <div class="col-md">
        <a {% if section.settings.caption_1_link != blank %}href="{{ section.settings.caption_1_link }}"{% endif %} class="shop-feature">
          <div class="shop-feature-icon"><i class="{{ section.settings.caption_1_icon }}"></i></div>
          <div class="shop-feature-text">
            <div class="text1">{{ section.settings.caption_1_1_text }}</div>
            <div class="text2">{{ section.settings.caption_1_2_text }}</div>
          </div>
          <span class="shop-feature-bg"></span>
        </a>
      </div>
      <div class="col-md">
        <a {% if section.settings.caption_2_link != blank %}href="{{ section.settings.caption_2_link }}"{% endif %} class="shop-feature">
          <div class="shop-feature-icon"><i class="{{ section.settings.caption_2_icon }}"></i></div>
          <div class="shop-feature-text">
            <div class="text1">{{ section.settings.caption_2_1_text }}</div>
            <div class="text2">{{ section.settings.caption_2_1_text }}</div>
          </div>
          <span class="shop-feature-bg"></span>
        </a>
      </div>
      <div class="col-md">
        <a {% if section.settings.caption_3_link != blank %}href="{{ section.settings.caption_3_link }}"{% endif %} class="shop-feature">
          <div class="shop-feature-icon"><i class="{{ section.settings.caption_3_icon }}"></i></div>
          <div class="shop-feature-text">
            <div class="text1">{{ section.settings.caption_3_1_text }}</div>
            <div class="text2">{{ section.settings.caption_3_1_text }}</div>
          </div>
          <span class="shop-feature-bg"></span>
        </a>
      </div>
    </div>
  </div>
</div>
{% endunless %}
