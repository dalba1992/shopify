{% unless settings.slides_mode %}
<!-- BN Slider 2 -->
<div class="holder fullwidth full-nopad {{ section.settings.outer_margin }}">
    <div class="container">
        <div class="bnslider-wrapper">
            <div class="bnslider bnslider--lg keep-scale" id="bnslider-002" data-slick='{"arrows": true, "dots": true}'
                 data-autoplay="false" data-speed="5000"
                 data-start-width='1600' data-start-height='700' data-start-mwidth='1600' data-start-mheight='1000'>
                {% for block in section.blocks %}
                {% if block.settings.enable %}
                <div class="bnslider-slide">
                    <div class="bnslider-image" style="background-image: url('{% if block.settings.image %}{{ block.settings.image | img_url:'master' }}{% endif %}{% if block.settings.image == blank %}{{ 'slide-plumbing2-1.jpg'  | asset_url }}{% endif %}');"></div>
                    <div class="bnslider-text-wrap bnslider-overlay">
                        <div class="bnslider-text-content txt-top txt-left">
                            <div class="bnslider-text-content-flex container">
                                <div class="bnslider-pricing">
                                    {{ block.settings.description }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
                {% endfor %}
            </div>
            <div class="bnslider-arrows container">
                <div></div>
            </div>
            <div class="bnslider-dots vert-dots container"></div>
        </div>
    </div>
</div>
{% endunless %}
