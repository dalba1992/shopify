{% unless settings.slides_mode %}


<div class="holder {{ section.settings.outer_margin }}">
    <div class="container">
        <div class="row vert-margin-middle mobile-sm-pad">
            {% for block in section.blocks %}
            {% if block.settings.enable %}
            <div class="col-6 col-md-3">
                <a href="{{ block.settings.link }}" class="collection-box">
                    <div class="collection-box-image">
                        <img src="{% if block.settings.image %}{{ block.settings.image | img_url:'master' }}{% else %}{{ 'collection-sport-1.jpg'  | asset_url }}{% endif %}" alt="">
                    </div>
                    <div class="collection-box-text">
                        <h4 class="collection-box-title">{{ block.settings.title }}</h4>
                        <h3 class="collection-box-sub">{{ block.settings.description }}</h3>
                    </div>
                </a>
            </div>
            {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
{% endunless %}
{% schema %}
{
"name": "Collections grid",
"class": "index-section",
"settings": [
{
"type": "header",
"content": "Layout"
},
{
"type": "select",
"id": "outer_margin",
"label": "Outer top margin",
"options":[
{"value":"mt-0","label":"None"},
{"value":"mt-1","label":"10px"},
{"value":"mt-2","label":"20px"},
{"value":"mt-3","label":"30px"},
{"value":"mt-4","label":"40px"},
{"value":"mt-5","label":"50px"},
{"value":"mt-6","label":"60px"},
{"value":"mt-65","label":"65px"},
{"value":"mt-7","label":"70px"},
{"value":"mt-8","label":"80px"},
{"value":"mt-9","label":"90px"},
{"value":"mt-10","label":"100px"}
],
"default": "mt-65"
},
{
"type": "header",
"content": "General"
}
],
"blocks": [
{
"type": "collection",
"name": "Collection",
"settings": [
{
"type":"checkbox",
"id":"enable",
"label":"Enable",
"default":true
},
{
"type": "text",
"id": "title",
"label": "Name",
"default": "Sport"
},
{
"type": "text",
"id": "description",
"label": "Name",
"default": "SHOES"
},
{
"type": "image_picker",
"id": "image",
"label": "Image",
"info":"recommended size 262x250px"
},
{
"type": "url",
"id": "link",
"label": "Collection link"
}
]
}
],
"presets": [{
"name": "Collections grid",
"category": "Collections list",
"blocks": [
{
"type": "collection"
},
{
"type": "collection"
},
{
"type": "collection"
},
{
"type": "collection"
}
]
}]
}
{% endschema %}