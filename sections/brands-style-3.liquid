{% unless settings.slides_mode %}
<div class="holder {{ section.settings.outer_margin }} py-3 py-md-6 holder-bg-03">
    <div class="container">
        <div class="row flex-nowrap align-items-center">
            {% if section.settings.heading != blank %}<div class="col brand-carousel-title d-none d-md-block">
                {{ section.settings.heading }}
            </div>{% endif %}
            <div class="col">
                <ul class="brand-carousel js-brand-carousel slick-arrows-right">
                    {% for block in section.blocks %}
                        {% if block.settings.enable %}
                            <li><a href="{{ block.settings.link }}" target="{{ block.settings.link_target }}"  title="{{ block.settings.title }}"><img  src="{% if block.settings.image %}{{ block.settings.image | img_url:'master' }}{% endif %}{% if block.settings.image == blank %}{{ 'brand-logo-01.png'  | asset_url }}{% endif %}" alt="{{ block.settings.title }}"></a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
{% endunless %}
{% schema %}
{
"name": "Brands - Style 3",
"settings": [
{
"type": "header",
"content": "Layout"
},

{
"type": "select",
"id": "outer_margin",
"label": "Outer top margin",
"options":[
    {"value":"mt-0","label":"None"},
    {"value":"mt-1","label":"10px"},
    {"value":"mt-2","label":"20px"},
    {"value":"mt-3","label":"30px"},
    {"value":"mt-4","label":"40px"},
    {"value":"mt-5","label":"50px"},
    {"value":"mt-6","label":"60px"},
    {"value":"mt-65","label":"65px"},
    {"value":"mt-7","label":"70px"},
    {"value":"mt-8","label":"80px"},
    {"value":"mt-9","label":"90px"},
    {"value":"mt-10","label":"100px"}
    ],
    "default": "mt-65"
},
{
"type": "header",
"content": "General"
},
{
"type": "text",
"id": "heading",
"label": "Heading",
"default": "36 WORLD<br/>BRANDS"
}
],
"blocks": [
{
"type": "brand",
"name": "Brand",
"settings": [
{
"type":"checkbox",
"id":"enable",
"label":"Enable",
"default":true
},
{
"type": "text",
"id": "title",
"label": "Name",
"default": "Bigsteps"
},
{
"type": "image_picker",
"id": "image",
"label": "Image",
"info":"recommended size 122x64px"
},
{
"type": "url",
"id": "link",
"label": "Slide link"
},
{
"type": "select",
"id": "link_target",
"label": "Link Target",
"default":"_self",
"options": [
{ "value": "_blank", "label": "New page" },
{ "value": "_self",  "label": "In current page" }
]
