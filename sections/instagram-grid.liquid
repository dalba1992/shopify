{% unless settings.slides_mode %}
<div class="holder boxed {{ section.settings.outer_margin }}">
    <div class="container">
        <div class="title-wrap text-center"><h2 class="h1-style">{{ section.settings.heading }}</h2></div>
        <div class="instagram-grid eleven-in-row">
            <div class="row">
                <div class="col col-xl-10 aside-col-xl-12 mx-auto">
                    <div id="instafeed-{{ section.id }}" class="instagram-feed-full js-instagram-feed" data-instafeed='{"limit": "{{ section.settings.insta_limit }}", "accessToken": "{{ section.settings.insta_token }}", "sortBy": "{{ section.settings.insta_sort }}"}'></div>
                </div>
            </div>
        </div>
        {% if section.settings.link_button_yes %}<div class="text-center mt-3 mt-md-4"><a {% if section.settings.link %}href="{{ section.settings.link }}" target="{{ section.settings.link_target }}"{% endif %} class="btn-decor">{{ section.settings.link_button_text }}</a></div>{% endif %}
    </div>
</div>
{% endunless %}
{% schema %}
{
    "name": "Instagram Grid",
    "class": "index-section",
    "settings": [

        {
            "type": "header",
            "content": "Layout"
        },
        {
            "type": "select",
            "id": "outer_margin",
            "label": "Outer top margin",
            "options":[
  {"value":"mt-0","label":"None"},
  {"value":"mt-1","label":"10px"},
  {"value":"mt-2","label":"20px"},
  {"value":"mt-3","label":"30px"},
  {"value":"mt-4","label":"40px"},
  {"value":"mt-5","label":"50px"},
  {"value":"mt-6","label":"60px"},
  {"value":"mt-65","label":"65px"},
  {"value":"mt-7","label":"70px"},
  {"value":"mt-8","label":"80px"},
  {"value":"mt-9","label":"90px"},
  {"value":"mt-10","label":"100px"}
  ],
  "default": "mt-65"
        },
        {
            "type": "header",
            "content": "General"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Title",
            "default":"FOLLOW US ON INSTAGRAM"
        },
        {
            "type": "text",
            "id": "insta_token",
            "label": "accessToken",
            "info": "[how get accessToken read here](https:\/\/www.instagram.com\/developer\/authentication\/) find 'Client-Side (Implicit) Authentication' or [generate here](http://instagram.pixelunion.net/)",
            "default":"8136043898.1677ed0.5f6f0f08a4614a9f83fd02618b192be9"
        },
        {
            "type": "text",
            "id": "insta_limit",
            "label": "Limit",
            "default": "33"
        },
        {
            "type": "select",
            "id": "insta_sort",
            "label": "Sort By",
            "options": [
                { "value": "none", "label": "none default" },
                { "value": "most-recent", "label": "Newest to oldest" },
                { "value": "least-recent", "label": "Oldest to newest" },
                { "value": "most-liked", "label": "Highest # of likes to lowest" },
                { "value": "least-liked", "label": "Lowest # likes to highest" },
                { "value": "most-commented", "label": "Highest # of comments to lowest" },
                { "value": "least-commented", "label": " Lowest # of comments to highest" },
                { "value": "random", "label": "Random order" }
            ],
            "default": "most-recent"
        },
{
"type": "checkbox",
"id": "link_button_yes",
"label": "Add link button",
"default":true
},
{
"type": "text",
"id": "link_button_text",
"label": "Link button text",
"default":"Follow Us"
},
{
"type": "url",
"id": "link",
"label": "Link"
},
{
"type": "select",
"id": "link_target",
"label": "Link Target",
"default":"_self",
"options": [
{ "value": "_blank", "label": "New page" },
{ "value": "_self",  "label": "In current page" }
]
}
    ],
    "presets": [
        {
            "name": "Instagram Grid",
            "category": "Instagram"
        }
    ]
}
{% endschema %}
