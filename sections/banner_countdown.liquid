{% unless settings.slides_mode %}
<div class="holder boxed {{ section.settings.outer_margin }}">
    <div class="container  bg-cover" style="background-image: url({% if section.settings.image %}{{ section.settings.image | img_url:'master' }}{% else %}{{ 'coming-soon-bg-2.jpg'  | asset_url }}{% endif %});">
        <a {% if section.settings.link != blank %}href="{{ section.settings.link }}"{% endif %} class="count-banner-link">
            <div class="row justify-content-center">
                <div class="col-sm-11 col-lg-W10">
                    <div class="count-banner">
                        <div class="row align-items-center">
                            <div class="col-md-7">
                                <div class="count-banner-caption text-center">
                                    <div class="count-banner-txt1">{{ section.settings.caption_1_text }}</div>
                                    <div class="count-banner-txt2">{{ section.settings.caption_2_text }}</div>
                                    <div class="count-banner-txt1">{{ section.settings.caption_3_text }}</div>
                                    <div class="countdown-box">
                                        <div class="countdown js-countdown" data-countdown="{{ section.settings.password_page_date }}"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>
{% endunless %}


{% schema %}
{
"name": "Banner - Coming soon",
"class": "index-section",
"settings": [
{
"type": "header",
"content": "Layout"
},
{
"type": "select",
"id": "outer_margin",
"label": "Outer top margin",
"options":[
{"value":"mt-0","label":"None"},
{"value":"mt-1","label":"10px"},
{"value":"mt-2","label":"20px"},
{"value":"mt-3","label":"30px"},
{"value":"mt-4","label":"40px"},
{"value":"mt-5","label":"50px"},
{"value":"mt-6","label":"60px"},
{"value":"mt-65","label":"65px"},
{"value":"mt-7","label":"70px"},
{"value":"mt-8","label":"80px"},
{"value":"mt-9","label":"90px"},
{"value":"mt-10","label":"100px"}
],
"default": "mt-65"
},
{
"type": "header",
"content": "General"
},
{
"type": "image_picker",
"id": "image",
"label": "Image",
"info":"recommended width 1170x446 (like in demo)"
},
{
"type": "url",
"id": "link",
"label": "Link"
},
{
"type": "select",
"id": "link_target",
"label": "Link Target",
"default":"_self",
"options": [
{ "value": "_blank", "label": "New page" },
{ "value": "_self",  "label": "In current page" }
]
},
{
"type": "header",
"content": "CAPTIONS"
},
{
"type":"header",
"content":"Caption 1"
},
{
"type": "text",
"id": "caption_1_text",
"label": "Caption 1",
"default":"NEW COLLECTION"
},
{
"type": "text",
"id": "caption_2_text",
"label": "Caption 2",
"default":"COMING <span>SOON</span>"
},
{
"type": "text",
"id": "caption_3_text",
"label": "Caption 3",
"default":"KEEP IN TOUCH"
},
{
"type": "text",
"id": "password_page_date",
"label": "Coming Soon Date to Open",
"info": "for countdown timer, right format ex. 2018\/12\/31",
"default": "2018\/12\/31"
}
],
"presets": [
{
"name": "Banner - Coming soon",
"category": "Banners"
}
]
}
{% endschema %}