{% unless settings.slides_mode %}
<div class="holder fullwidth full-nopad {{ section.settings.outer_margin }}">
    <div class="container">
        <div class="big-carousel js-bigcarousel">
            {% for block in section.blocks %}
            {% if block.settings.enable %}
            <div class="big-carousel-item">
                <div class="big-carousel-item-image"><img src="{% if block.settings.image %}{{ block.settings.image | img_url:'master' }}{% endif %}{% if block.settings.image == blank %}{{ 'img-slide-furniture-1.jpg'  | asset_url }}{% endif %}" alt="" class="img-responsive"></div>
                <div class="big-carousel-item-caption-wrap">
                    <div class="big-carousel-item-caption">
                        <h2 class="big-carousel-item-title">{{ block.settings.title }}</h2>
                        <h4 class="big-carousel-item-subtitle">{{ block.settings.title_2 }}</h4>
                        <p>{{ block.settings.description }}</p>
                        <a href="{{ block.settings.link | default:'#' }}" class="btn-decor">{{ block.settings.link_title }}</a>
                    </div>
                </div>
            </div>
            {% endif %}
            {% endfor %}

        </div>
    </div>
</div>
{% endunless %}
