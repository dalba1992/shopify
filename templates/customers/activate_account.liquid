<div class="holder mt-0">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-md-6 offset-sm-2 offset-md-3">
                <h2 class="text-center">{{ 'customer.activate_account.title' | t }}</h2>
                <div class="form-wrapper">
                    <p>{{ 'customer.activate_account.subtext' | t }}</p>
                    {% form 'activate_customer_password' %}
                    {{ form.errors | default_errors }}

                    <div class="form-group">
                        <input type="password" class="form-control" value="" name="customer[password]" id="CustomerPassword" placeholder="{{ 'customer.activate_account.password' | t }}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
                    </div>
                    <div class="clearfix">

                    </div>
                    <div class="text-center">
                        <button class="btn" type="submit">{{ 'customer.activate_account.submit' | t }}</button>
                        <input type="submit" class="btn btn--alt" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">
                    </div>
                    {% endform %}
                </div>
            </div>
        </div>
    </div>
</div>